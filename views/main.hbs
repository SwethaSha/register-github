<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>register</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
</head>
<body>
<div class="container">
	<h2 class="display-4 text-center py-1">Register</h2>
    {{message}}

    	<div class="jumbotron p-3 shadow-5m">

        {{#if edit_id}}

        <h5>Edit</h5>

              <form method="POST" action="/update_students/{{edit_id}}">
            <div class="row">
               <div class="col">
               	  <label for="exampleInputEmail1">First Name</label>
                  <input name="firstname" value="{{edit_students.firstname}}" type="text" class="form-control" placeholder="First name">
                </div>
                <div class="col">
                  <label for="exampleInputEmail1">Last Name</label>	
                  <input name="lastname" value="{{edit_students.lastname}}" type="text" class="form-control" placeholder="Last name">
                </div>
            </div>
                <br>

		         	<div class="d-flex align-items-center">
		         	<div class="form-group">
                    <label for="exampleInputLocation1">Location</label>
                    <input name="location" value="{{edit_students.location}}" type="location" class="form-control" id="exampleInputLocation1" placeholder="Enter location">
                    </div>
                    </div>
                    
                    <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input name="email" value="{{edit_students.email}}" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
				    </div>
				    </div>

				    <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputDOB1">DOB</label>
                    <input name="dob" value="{{edit_students.dob}}" type="date" class="form-control" id="exampleInputdate1" placeholder="Enter dob">
				    </div>
				    </div>

				    <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputEducation1">Education</label>
                    <input name="education" value="{{edit_students.education}}" type="education" class="form-control" id="exampleInputEducation1" placeholder="Enter education">
				    </div>
				    </div>

				     <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputAbout1">About</label>
                    <textarea type="about" class="form-control" id="exampleInputAbout1"></textarea>
				    </div>
				    </div><br>
				     <button type="submit" class="btn btn-primary">Submit</button>
	    </form>	 <br><br>


      {{else}}
  
      <form method="POST" action="/create_students">
            <div class="row">
               <div class="col">
               	  <label for="exampleInputEmail1">First Name</label>
                  <input name="firstname" type="text" class="form-control" placeholder="First name">
                </div>
                <div class="col">
                  <label for="exampleInputEmail1">Last Name</label>	
                  <input name="lastname" type="text" class="form-control" placeholder="Last name">
                </div>
            </div>
                <br>

		         	<div class="d-flex align-items-center">
		         	<div class="form-group">
                    <label for="exampleInputLocation1">Location</label>
                    <input name="location" type="location" class="form-control" id="exampleInputLocation1" placeholder="Enter location">
                    </div>
                    </div>
                    
                    <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
				    </div>
				    </div>

				    <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputDOB1">DOB</label>
                    <input name="dob" type="date" class="form-control" id="exampleInputdate1" placeholder="Enter dob">
				    </div>
				    </div>

				    <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputEducation1">Education</label>
                    <input name="education" type="education" class="form-control" id="exampleInputEducation1" placeholder="Enter education">
				    </div>
				    </div>

				     <div class="d-flex align-items-center">
				    <div class="form-group">
                    <label for="exampleInputAbout1">About</label>
                    <textarea type="about" class="form-control" id="exampleInputAbout1"></textarea>
				    </div>
				    </div><br>
				     <button type="submit" class="btn btn-primary">Submit</button>
	    </form>	 <br><br>

      {{/if}}


	    <div class="row mt-8">
	    <div class="col-12">  
        <h5>Students Management System</h5> <br><br>           

	            <table class="table table-bordered" id="crudTable">
                

	                <thead class="thead-dark">
                        
                       <tr>
                      
                         <th scope="col">First Name</th>
                         <th scope="col">Last Name</th>
                         <th scope="col">Location</th>
                         <th scope="col">Email</th>
                         <th scope="col">DOB</th>
                         <th scope="col">Education</th>
                         <th scope="col">Update</th> 
                          <th scope="col">Action</th>  
                        </tr>
                    </thead>
                    <tbody class="table table-striped">
                        {{#each students}}
                        <tr>
                          <td>{{this.firstname}}</td>
                          <td>{{this.lastname}}</td>
                          <td>{{this.location}}</td>
                          <td>{{this.email}}</td>
                          <td>{{this.dob}}</td>
                          <td>{{this.education}}</td>
                         <td><a href="/?edit_id={{this._id}}"><button class="edit-me btn btn-secondary btn-sm mr-1">Edit</button></a></td>
                          <td><a href="/?delete_id={{this._id}}" onclick = "return confirm('Are you sure want to delete')"><button class="delete-me btn btn-danger btn-sm">Delete</button></a></td>
                        </tr>
                         {{/each}}
                       
                    </tbody>
                     
                </table>
        </div>
        </div>  
              
    
	</div>
</div>
</body>
</html>    